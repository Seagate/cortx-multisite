[Unit]
Description=s3_in_memory server's service file to start a daemon instance.

[Install]
WantedBy=multi-user.target

[Service]
Restart=on-failure
Type=simple
User=root
Environment="PYTHONPATH=/root/cortx-multisite/s3/replication/common/src"
ExecStart=/usr/bin/python3 /root/cortx-multisite/s3/replication/common/tests/system/s3_in_memory.py
