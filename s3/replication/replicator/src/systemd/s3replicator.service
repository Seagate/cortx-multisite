[Unit]
Description=s3replicator service file to start a daemon instance.

[Install]
WantedBy=multi-user.target

[Service]
Restart=on-failure
Type=simple
User=root
ExecStart=/usr/bin/python3 -m s3replicator
WorkingDirectory=/root/cortx-multisite/s3/replication/replicator/src
Environment="PYTHONPATH=/root/cortx-multisite/s3/replication/common/src"
